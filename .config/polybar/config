[global/wm]
;margin-top = 
;margin-bottom = 2

[colors]
;fg = ${xrdb:color0}
fg = ${xrdb:color15}
;bg = #001b2b34
bg = ${xrdb:color0}

[bar/top]
width = 100%
height = 27
offset-x = 0%
offset-y= 0%
fixed-center = true
override-redirect = false 


background = ${colors.bg}
foreground = ${colors.fg}

font-0 = SF Mono:size=11:weight=semibold;3

modules-left =  date time volume
modules-center =  
modules-right = ewmh

tray-position = right
tray-padding = 0
tray-background = ${colors.bg}
tray-detached = false

underline-size = 3

spacing = 1 
padding-left = 1
padding-right = 1
module-margin-left = 2
module-margin-right = 2

#[module/volume]
#type = custom/script
#interval = 0.01
#exec = ~/bin/vol.sh -q
#scroll-up = ~/bin/vol.sh -i
#scroll-down = ~/bin/vol.sh -d

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-prefix = " "
format-prefix-foreground = ${xrdb:color6}
module-margin-left = 2
format-padding = 2
format-background = ${colors.bg}

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-scroll = true

format = <label-state>

label-active = ×
label-active-foreground = ${xrdb:color1}
label-active-background = ${colors.bg}
label-active-padding = 1

label-empty = •
label-empty-foreground = ${colors.fg}
label-empty-background = ${colors.bg}
label-empty-padding = 1

label-urgent = !
label-urgent-foreground = #EC5f67
label-urgent-background = ${colors.bg}
label-urgent-padding = 1

[module/date]
type = custom/script
interval = 1.0
exec = ~/bin/time.sh -d

[module/time]
type = custom/script
interval = 1.0
exec = ~/bin/time.sh -t

[module/battery]
type = custom/script
interval = 1.0
exec = ~/bin/bat.sh

[module/vpn-check]
type = custom/script
interval = 10.0
exec = ~/bin/vpn-check.sh

