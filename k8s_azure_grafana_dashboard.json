{
  "dashboard": {
    "id": null,
    "uid": "k8s-health-azmg",
    "title": "Kubernetes Cluster Health (Azure MG)",
    "tags": [
      "kubernetes",
      "health",
      "prometheus"
    ],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "stat",
        "title": "Cluster Uptime",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 4,
          "h": 3
        },
        "targets": [
          {
            "expr": "avg(time() - node_boot_time_seconds)",
            "format": "time_series",
            "interval": "",
            "legendFormat": "",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": [
              "mean"
            ],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "type": "stat",
        "title": "Node Count",
        "gridPos": {
          "x": 4,
          "y": 0,
          "w": 4,
          "h": 3
        },
        "targets": [
          {
            "expr": "count(kube_node_info)",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "type": "stat",
        "title": "Running Pods",
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 4,
          "h": 3
        },
        "targets": [
          {
            "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "type": "gauge",
        "title": "CPU Usage %",
        "gridPos": {
          "x": 0,
          "y": 3,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"kubelet\", image!=\"\"}[5m])) / sum(machine_cpu_cores)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "red",
                  "value": 0.9
                }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "type": "gauge",
        "title": "Memory Usage %",
        "gridPos": {
          "x": 6,
          "y": 3,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{job=\"kubelet\", image!=\"\"}) / sum(machine_memory_bytes)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "percentage",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.7
                },
                {
                  "color": "red",
                  "value": 0.9
                }
              ]
            }
          },
          "overrides": []
        }
      }
    ],
    "templating": {
      "list": []
    }
  },
  "overwrite": true
}